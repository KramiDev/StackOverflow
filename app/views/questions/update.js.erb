clearAlertAndNotice();
$('.question-error').html('');
<% if @question.errors.present? %>
    <% @question.errors.full_messages.each do |msg| %>
        $('.question-error').append('<%= j msg %>');
    <% end %>
    <% if flash[:alert] %>
        $('.alert').append('<br/> <%= flash[:alert] %>');
        <% flash[:alert] = '' %>
    <% end %>
<% else %>
    $('.question-body').html("<%= @question.body %>");
    $('#question-edit-form').hide();
    <% if flash[:notice] %>
        $('.notice').append('<br/> <%= flash[:notice] %>');
    <% flash[:notice] = '' %>
    <% end %>
<% end %>

